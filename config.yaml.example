# 复制为 config.yaml 后按需修改。缺项使用默认值，无 config.yaml 亦可运行。

display:
  width: 800
  height: 480
  fullscreen: true
  nav_button_min_size: 40
  # 硬件背光亮度 0~100（树莓派 7 寸 DSI，需配置 rpi_set_backlight + sudoers）
  brightness_percent: 60
  default_brightness_percent: 60

ui:
  language: zh_CN
  theme_mode: light
  brightness: 80
  # 开发预览用，如 [800, 480]；未配置则按真实屏幕
  # force_resolution: [800, 480]

modbus:
  # true: 不连接真实串口，使用模拟数据（推荐默认）
  use_mock: true
  # 真实硬件时 use_mock: false，并配置串口
  port: /dev/ttyUSB0
  baudrate: 19200
  parity: N
  stopbits: 1
  timeout: 0.2

poll:
  FAST_MS: 300
  SLOW_MS: 1000
  VERY_SLOW_MS: 5000

camera:
  rtsp_urls:
    cam1: ""
    cam2: ""
    cam3: ""
    cam4: ""
    cam5: ""
    cam6: ""
    bird: ""

# 视频嵌入（树莓派 X11/Wayland）
video:
  # 优先后端: auto(按会话) | x11 | wayland
  prefer_backend: auto
  # GStreamer sink: auto | ximagesink | glimagesink | waylandsink | autovideosink
  sink: auto
  # true 时仅占位不尝试嵌入
  force_no_embed: false
